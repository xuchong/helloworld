<h1><%=  @questionnaire.qa_title %></h1>
<div align="center">
<table class="table table-striped table-hover" style="width:80%">
     <thead>
	
		 		<tr>
		 			<td>
		 			<div align="center"style="font-size:20px">
		 			<%= "Subject: "  +  @questionnaire.qa_subject %>
		 			</div>
		 			</td>
		 		</tr>
		 		<tr>
		 			<td>
		 			<div align="center"style="font-size:20px">
		 			<%= "Description: "  +  @questionnaire.qa_description %>
		 			</div>
		 			 </td>
		 		</tr>
		 		
				
</thead>
		<tbody>
		<% @questions.each do |question| %>
		
		 	<% if question.q_type == 1 %>

		 		<tr>
		 			<td>
		 			<%= "Single Choice:" %><br />
		 			<div style="font-size:18px"><%= question.q_content %> </div>
		 		

				<% @choices = question.q_choice.split(";") %>
				<% @choices.each do |onechoice| %> 
				
			
					<div width="30px" style="float:left">
					<%= radio_button_tag 'id_'+question.id.to_s, onechoice %> 
					</div>  
				              <%= label_tag onechoice %>
				
				<% end %>
				</td></tr>
				
			
			<% elsif question.q_type == 2 %>

		 		<tr>
		 			<td>
		 			<%= "Multiple Choice:" %><br />
		 			<div style="font-size:18px"><%= question.q_content %> </div>
		 		

				<% @choices = question.q_choice.split(";") %>
				<% @choices.each do |onechoice| %> 
				
				
					<div width="30px" style="float:left">
					<%= check_box_tag 'id_'+question.id.to_s, onechoice %> 
					</div>  
				              <%= label_tag onechoice %>
				
				<% end %>
			</td></tr>
				
			<% elsif question.q_type == 3 %>

		 		<tr>
		 			<td>
		 			<%= "True/False Choice:" %><br />
		 			<div style="font-size:18px"><%= question.q_content %> </div>
		 		
					<div width="30px" style="float:left">
					<%= radio_button_tag 'id_'+question.id.to_s, "True"%> 
					</div>  
				              <%= label_tag "True" %>
				              <div width="30px" style="float:left">
					<%= radio_button_tag 'id_'+question.id.to_s, "False"%> 
					</div>  
				              <%= label_tag "False" %>
				</td></tr>
				
			<% elsif question.q_type == 4 %>

		 		<tr>
		 			<td>
		 			<%= "Essay Question:" %>
		 			<div style="font-size:18px"><%= question.q_content %> </div>
		 		
					<div width="300px" style="float:left">
					<%= text_area_tag 'id_'+question.id.to_s %> 
					</div> 
					<br />
				</td></tr>
				
			<% end %>
		<% end %>
		<tr>
			<td>
		<div align="center">
		<%= button_to "Submit", answer_successfully_path, :class => "btn btn-primary", :method => :get %>
	              </div>
	          </td></tr>
		<br />
		<br />
	</tbody>
	
</table>
</div>