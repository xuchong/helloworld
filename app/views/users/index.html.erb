<h1>用户管理</h1>
<!-- f.submit "Create new Questionnaire", class: 用户管理btn btn-large btn-primary"  -->

<table class="table table-striped table-hover">
   <thead>
      <tr>
         <th>Name</th>
         <th>Email</th>
         <th>Created Time</th>
         <th>Status </th>
         <th>Publish Times</th>
         <th>Answer Times</th>
         <th>Operation</th>
      </tr>
   </thead>

   <tbody>
   	<% @users.each do |user| %>
	<tr>
	<td> <%= link_to user.user_name, users_path %> </td>
	<td> <%= user.user_email %> </td>
	<td> <%= user.created_at %> </td>
	<td> <% if user.user_status == 1 %> 
		 <p>Normal </p>
		 <% else %>
		 <p> Blocked </p>
		 <% end %>
	</td>
	<td> 
		<%= user.questionnaires.count %>
	</td>
	<td>
		<%= user.relationships.count %>
	</td>
	<td>
		<%= link_to 'Block', '#' %>
		<%= link_to 'Delete', user, method: :delete, data: { confirm: '确定删除用户吗' } %>
	</td>
	</tr>
     <% end %>
   </tbody>
</table>